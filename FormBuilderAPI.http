@FormBuilderAPI_HostAddress = http://localhost:5157

### Get all forms
GET {{FormBuilderAPI_HostAddress}}/api/forms
Accept: application/json

###

### Create a new form (Valid Request)

POST {{FormBuilderAPI_HostAddress}}/api/forms
Content-Type: application/json

{
  "name": "Parisher Demographics",
  "tenantId": 1,
  "fields": [
    {
      "alignment": "center",
      "columnsPerRow": 2,
      "columns": [
        {
          "type": "text",
          "label": "First Name",
          "name": "firstname",
          "placeholder": "Enter your first name",
          "required": true,
          "options": [],
          "formSection": {
            "id": 1,
            "name": "Personal Information",
            "form": {
              "id": 1,
              "name": "Parisher Demographics",
              "tenant": {
                "id": 1,
                "name": "Vineeth"
              },
              "fields": [] 
            }
          }
        },
        {
          "type": "text",
          "label": "Last Name",
          "name": "lastname",
          "placeholder": "Enter your last name",
          "required": true,
          "options": [],
          "formSection": {
            "id": 1,
            "name": "Personal Information",
            "form": {
              "id": 1,
              "name": "Parisher Demographics",
              "tenant": {
                "id": 1,
                "name": "Vineeth"
              },
              "fields": []
            }
          }
        }
      ]
    }
  ]
}

